Class {
	#name : #HVar,
	#superclass : #HThing,
	#instVars : [
		'name',
		'argSorts'
	],
	#category : #Refinements
}

{ #category : #'instance creation' }
HVar class >> name: aString argSorts: sorts [
	^self basicNew
		name: aString;
		argSorts: sorts;
		yourself
]

{ #category : #adding }
HVar >> addToQuery: q [ 
	q vars add: self
]

{ #category : #accessing }
HVar >> argSorts [
	^ argSorts
]

{ #category : #accessing }
HVar >> argSorts: sorts [
	argSorts := sorts toProduct
]

{ #category : #accessing }
HVar >> name [
	^ name
]

{ #category : #accessing }
HVar >> name: aString [
	name := aString
]

{ #category : #printing }
HVar >> printOn: aStream [
	aStream nextPutAll: '(var $'.
	aStream nextPutAll: name.
	aStream nextPutAll: ' '.
	argSorts printElementsOn: aStream.
	aStream nextPutAll: ')'
]
